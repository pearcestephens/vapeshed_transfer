# Vapeshed Transfer Engine - Environment Configuration Template
# Copy this file to .env and update with your values

# Application Configuration
APP_NAME="Vapeshed Transfer Engine"
APP_ENV=development
APP_DEBUG=true
APP_URL=https://staff.vapeshed.co.nz/transfer-engine

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=vapeshed_transfers
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# CIS Integration
CIS_BASE_URL=https://staff.vapeshed.co.nz
CIS_API_KEY=your_cis_api_key

# Warehouse Configuration
WAREHOUSE_ID=02dcd191-ae2b-11e6-f485-8eceed6eeafb
WAREHOUSE_WEB_OUTLET_ID=1

# Security
SESSION_LIFETIME=7200
CSRF_TOKEN_NAME=_token
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=file
LOG_LEVEL=info
LOG_PATH=var/logs/transfer.log

# Cache Configuration
CACHE_DRIVER=file
CACHE_PREFIX=vapeshed_transfer

# Transfer Engine Settings
DEFAULT_DRY_RUN=true
MAX_EXECUTION_TIME=300
TRANSFER_BATCH_SIZE=50

# Control Panel Configuration
BROWSE_MODE=true
CONTROL_PANEL_WRITE_ENABLED=false
CONTROL_PANEL_DEBUG=false

# Transfer Engine Integration
TRANSFER_ENGINE_BASE_URL=https://staff.vapeshed.co.nz/assets/cron/NewTransferV3
TRANSFER_ENGINE_API_KEY=your_engine_api_key

# Email Notifications (optional)
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@vapeshed.co.nz
MAIL_FROM_NAME="Vapeshed Transfer Engine"