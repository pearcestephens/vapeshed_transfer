{
    "name": "vapeshed/transfer-engine",
    "description": "Transfer Engine control panel with traffic monitoring and API lab",
    "type": "project",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "VapeshedTransfer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "platform": {
            "php": "8.1.0"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit tests/Unit",
        "test:security": "phpunit tests/Security",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level max",
        "phpstan:baseline": "phpstan analyse src tests --level max --generate-baseline"
    }
}
