    {
      "name": "My Account",
      "short_name": "Account",
      "description": "View your personalized dashboard",
      "url": "/dashboard?utm_source=pwa_shortcut",
      "icons": [{ "src": "/assets/pwa/shortcut-account.png", "sizes": "96x96" }]
    },
    {
      "name": "Store Locator",
      "short_name": "Stores",
      "description": "Find your nearest Vape Shed location",
      "url": "/stores?utm_source=pwa_shortcut", 
      "icons": [{ "src": "/assets/pwa/shortcut-stores.png", "sizes": "96x96" }]
    },
    {
      "name": "New Products",
      "short_name": "New",
      "description": "Browse the latest arrivals",
      "url": "/products/new?utm_source=pwa_shortcut",
