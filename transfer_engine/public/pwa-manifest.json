    },
    {
      "name": "My Orders",
      "short_name": "Orders",
      "description": "Track your order status",
      "url": "/orders?utm_source=pwa_shortcut",
      "icons": [{ "src": "/assets/pwa/shortcut-orders.png", "sizes": "96x96" }]
    }
  ],
  
  "share_target": {
    "action": "/share-product",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+vapeshed",
      "url": "/handle?type=%s"
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}